{
  "name": "nu6-phoneme-scorer",
  "version": "1.0.0",
  "description": "NU-6 Phoneme Scoring Application with Thornton & Raffin Statistical Comparison",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "audiology",
    "nu6",
    "scoring",
    "hearing-test",
    "phoneme"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.audiology.nu6scorer",
    "productName": "NU-6 Scorer",
    "files": [
      "main.js",
      "nu6_scoring_app.html"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.medical"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Science",
      "synopsis": "Audiology Word List Scorer"
    }
  }
}
